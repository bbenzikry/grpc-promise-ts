{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["es5", "es6"],
    "preserveConstEnums": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "dist",
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "target": "ESNext"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "./**/__tests__"],
  "version": "3.8.3"
}
